<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/generic_story_bg_9"
    tools:context="cmsc436_final_project.teddytalk.SaveActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fantasy_button"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:text="Saved Stories"
        android:textAlignment="center"
        android:textColor="@color/pick_story_color"
        android:textSize="30sp" />

    <Button
        android:id="@+id/toTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="456dp"
        android:background="@color/select_genre_title"
        android:text="Go back to TItle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_view"
        android:background="@color/white_20opacity"
        android:layout_width="368dp"
        android:layout_height="439dp"
        android:layout_marginTop="68dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
