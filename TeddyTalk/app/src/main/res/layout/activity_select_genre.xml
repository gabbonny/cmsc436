<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_genre_bg"
    android:id="@+id/select_story">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="cursive"
        android:text="Pick your Story!!"
        android:textAlignment="center"
        android:textColor="#F35692"
        android:textSize="50dp" />

    <FrameLayout
        android:id="@+id/story_options_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="80dp" >

        <RelativeLayout
            android:id="@+id/options_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/adventure_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="23dp"
                android:background="@color/prompt_option1"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="15dp"
                android:rotation="-15"
                android:text="ADVENTURE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/love_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/adventure_button"
                android:layout_alignBottom="@+id/adventure_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:background="@color/prompt_option2"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="15dp"
                android:rotation="15"
                android:text="LOVE "
                android:textSize="30sp" />

            <Button
                android:id="@+id/fantasy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/adventure_button"
                android:layout_below="@+id/adventure_button"
                android:layout_marginTop="40dp"
                android:background="@color/prompt_option3"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="15dp"
                android:rotation="5"
                android:text="FANTASY"
                android:textSize="30sp" />

            <Button
                android:id="@+id/funny_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fantasy_button"
                android:layout_alignBottom="@+id/fantasy_button"
                android:layout_alignStart="@+id/love_button"
                android:background="@color/prompt_option4"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="15dp"
                android:rotation="-5"
                android:text="FUNNY"
                android:textSize="30sp" />

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/control_btns_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/fab_margin"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/nextButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_btn_descrip"
            android:scaleType="fitEnd"
            android:src="@drawable/next_button"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>