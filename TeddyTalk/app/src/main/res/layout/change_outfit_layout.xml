<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/generic_story_bg_9"
    android:theme="@style/AppTheme.NoActionBar">

        <ImageView
            android:id="@+id/outfit_bear"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/banner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:src="@drawable/outfit_bear" />

        <ImageView
            android:id="@+id/banner"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/outfit_banner" />


    <LinearLayout
        android:id="@+id/control_btns_wrapper"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/outfit_bear"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible"
        tools:layout_editor_absoluteY="300dp">

        <ImageButton
            android:id="@+id/none"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_btn_descrip"
            android:scaleType="fitStart"
            android:src="@drawable/none_icon"
            android:visibility="visible" />


        <ImageButton
            android:id="@+id/glasses"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_btn_descrip"
            android:scaleType="fitCenter"
            android:src="@drawable/glasses_icon"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/umd"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_btn_descrip"
            android:scaleType="fitCenter"
            android:src="@drawable/umd_icon"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/wizard"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_btn_descrip"
            android:scaleType="fitEnd"
            android:src="@drawable/wizard_icon"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/sailor"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_btn_descrip"
            android:scaleType="fitEnd"
            android:src="@drawable/sailor_icon"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm_outfit"
        android:layout_width="163dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_btns_wrapper"
        android:layout_centerHorizontal="true"
        android:background="@color/prompt_option1"
        android:text="CHANGE"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />


</RelativeLayout>
