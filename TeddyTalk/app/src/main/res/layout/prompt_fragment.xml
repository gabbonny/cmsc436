<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/prompt_wrapper"
        android:background="@color/white_20opacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/prompt_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:text="Sample Text Sample Text"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/fillInOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/prompt_text1"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/prompt_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fillInOption"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/options_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/prompt_wrapper"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/prompt_option1"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="5dp"
            android:rotation="-15"
            android:text="Button"
            android:textSize="16sp" />

        <Button
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/option1"
            android:layout_alignBottom="@+id/option1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="@color/prompt_option2"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="5dp"
            android:rotation="15"
            android:text="Button"
            android:textSize="16sp" />

        <Button
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/option1"
            android:layout_below="@+id/option1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:background="@color/prompt_option3"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="5dp"
            android:rotation="5"
            android:text="Button"
            android:textSize="16sp" />

        <Button
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/option3"
            android:layout_alignBottom="@+id/option3"
            android:layout_alignEnd="@+id/option2"
            android:layout_marginRight="15dp"
            android:background="@color/prompt_option4"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="5dp"
            android:rotation="-5"
            android:text="Button"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>