<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/prompt_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/prompt_wrapper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/prompt_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Sample Text Sample Text"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fillInOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/prompt_text1"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/prompt_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fillInOption"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:padding="5dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/prompt_options_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prompt_fragment_container"
        android:layout_marginBottom="80dp" >

        <RelativeLayout
            android:id="@+id/options_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/adv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="23dp"
                android:background="@color/prompt_option1"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:rotation="-15"
                android:text="Button"
                android:textSize="14sp" />

            <Button
                android:id="@+id/love_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/adv_button"
                android:layout_alignBottom="@+id/adv_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:background="@color/prompt_option2"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:rotation="15"
                android:text="Button"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fantasy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/adv_button"
                android:layout_below="@+id/adv_button"
                android:layout_marginTop="40dp"
                android:background="@color/prompt_option3"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:rotation="5"
                android:text="Button"
                android:textSize="14sp" />

            <Button
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fantasy_button"
                android:layout_alignBottom="@+id/fantasy_button"
                android:layout_alignStart="@+id/love_button"
                android:background="@color/prompt_option4"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:rotation="-5"
                android:text="Button"
                android:textSize="14sp" />

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>